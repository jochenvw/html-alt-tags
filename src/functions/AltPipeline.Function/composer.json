{
  "name": "alt-text-pipeline/function",
  "description": "Azure Alt-Text Pipeline - Serverless image description generator",
  "type": "project",
  "require": {
    "php": "^8.3",
    "guzzlehttp/guzzle": "^7.7",
    "symfony/yaml": "^7.0",
    "symfony/dotenv": "^7.0",
    "psr/log": "^3.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^11.0",
    "phpstan/phpstan": "^1.10"
  },
  "autoload": {
    "psr-4": {
      "AltPipeline\\": "App/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "AltPipeline\\Tests\\": "Tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "lint": "phpstan analyse App/"
  },
  "config": {
    "allow-plugins": true
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
